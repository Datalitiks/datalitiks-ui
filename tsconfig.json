{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "paths": {
      "@root/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    ".ladle"
  ],
  "exclude": [
    "node_modules"
  ]
}